@namespace Microsoft.Fast.Components.FluentUI
@inherits FluentComponentBase
@typeparam TValue
<fluent-option @ref=Element
               class="@Class"
               style="@Style"
               disabled="@Disabled"
               value="@BindConverter.FormatValue(Value?.ToString())"
               selected="@(Selected ?? Context?.CurrentValue?.Equals(Value))"
               onchange=@Context?.ChangeEventCallback
               @attributes="AdditionalAttributes">
    @ChildContent
</fluent-option>

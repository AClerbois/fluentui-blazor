@inherits FluentComponentBase

<CascadingValue Value="this" IsFixed="true">
    <fluent-accordion @ref=Element
                      expand-mode="@ExpandMode.ToAttributeValue()"
                      @attributes="AdditionalAttributes">
        @ChildContent
    </fluent-accordion>
</CascadingValue>

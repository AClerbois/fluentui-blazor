@inherits FluentComponentBase
<fluent-calendar @ref=Element 
                 readonly=@Readonly.ToString().ToLower()
                 month=@Month
                 year=@Year
                 locale=@Locale
                 day-format=@DayFormat.ToAttributeValue()
                 weekday-format=@WeekdayFormat.ToAttributeValue()
                 month-format=@MonthFormat.ToAttributeValue()
                 year-format=@YearFormat.ToAttributeValue()
                 min-weeks=@MinWeeks
                 disabled-dates=@disabledDatesAsString
                 selected-dates=@selectedDatesAsString
                 @ondateselected="OnDateSelected"
                 @attributes="AdditionalAttributes">
    @ChildContent
</fluent-calendar>

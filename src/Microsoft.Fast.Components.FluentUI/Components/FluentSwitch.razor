@inherits FluentInputBase<bool>
<fluent-switch @ref=Element
               readonly=@Readonly
               id=@Id
               value=@Value
               current-value=@CurrentValue
               disabled=@Disabled
               name=@Name
               required=@Required
               current-checked="@CurrentValue"
               @oncheckedchange="(__value) => CurrentValue = __value.Checked"
               @attributes="AdditionalAttributes">
    @ChildContent
</fluent-switch>

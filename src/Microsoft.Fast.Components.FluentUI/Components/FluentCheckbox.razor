@inherits FluentInputBase<bool>
<fluent-checkbox @ref=Element
                 readonly="@Readonly"
                 id=@Id
                 value=@Value
                 current-value=@CurrentValue
                 disabled=@Disabled
                 name=@Name
                 required="@Required"
                 current-checked="@CurrentValue"
                 @oncheckedchange="@((e) => CurrentValue = e.Checked)"
                 @attributes="AdditionalAttributes">
    @ChildContent
</fluent-checkbox>

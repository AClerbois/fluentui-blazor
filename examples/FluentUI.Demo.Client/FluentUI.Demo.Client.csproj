<Project Sdk="Microsoft.NET.Sdk.BlazorWebAssembly">

	<PropertyGroup>
		<TargetFrameworks>net6.0;net7.0</TargetFrameworks>
		<Nullable>enable</Nullable>
		<ImplicitUsings>enable</ImplicitUsings>
		<PublishTrimmed>true</PublishTrimmed>
	</PropertyGroup>

	<PropertyGroup>
		<!-- The icon component is part of the library and the icons it displays (static assets) are all published by default -->
		<!-- Setting the below to 'true' (default) will enable publishing of the icon static assets -->
		<!-- Setting the below to false will disable publishing of the icon static assets -->
		<!-- with exception of the icons that are being used by the library itself -->
		<PublishFluentIconAssets>true</PublishFluentIconAssets>

		<!-- You can limit what icon assets get published by specifying icon sizes and variants -->
		<!-- To determine what gets published, the specified options for sizes and variants are combined -->
		<!-- Specifying icon sizes '10' and '16' and icon variants 'filled' and 'regular'  -->
		<!-- means all '10 filled', all '10 regular', all '16 filled' and all '16 regular' icons assets are published -->
		<!-- It is not posible to specify individual combinations like '10 filled' and '16 regular' in the same published set -->

		<!-- If no icon sizes are specified, ALL icon sizes are included when publishing the icon assets is enabled -->
		<!-- Choose one or more from the options below (separated with ,) -->
		<!-- 10,12,16,20,24,28,32,48 -->
		<FluentIconSizes>10,12</FluentIconSizes>

		<!-- If no icon variants are specified, ALL icon variants are included when publishing the icon assets is enabled-->
		<!-- Choose one or more from the options below (separated with ,) -->
		<!-- filled,regular -->
		<FluentIconVariants>filled,</FluentIconVariants>
		
		<!-- The emoji component is part of the library but the emoji it displays (static assets) are not published by default -->
		<!-- Setting the below to 'true' will enable publishing of the emoji static assets -->
		<!-- Setting the below to 'false' (default) will disable ALL emoji static assets from being published -->
		<PublishFluentEmojiAssets>false</PublishFluentEmojiAssets>
		
		<!-- You can limit what emoji assets get published by specifying emoji groups and styles -->
		<!-- To determine what gets published, the specified options for groups and style are combined -->
		<!-- Specifying emoji groups 'activities' and 'flags' and emoji styles 'color' and 'flat' -->
		<!-- means all 'activities color', all 'activities flat', all 'flags color' and all 'flags flat' emoji assets are published -->
		<!-- It is not posible to specify individual combinations like 'activities color' and 'flags flat' in the same published set -->
		
		<!-- If no emoji groups are specified, ALL emoji groups are included when publishing the emoji assets is enabled -->
		<!-- To limit what groups will be used, choose one or more from the options below (separated with ,) -->
		<!-- activities,animals_nature,flags,food_drink,objects,people_body,smileys_emotion,symbols,travel_places -->
		<FluentEmojiGroups>flags</FluentEmojiGroups>

		<!-- If no emoji styles are specified, ALL emoji styles are included when publishing the emoji assets is enabled-->
		<!-- To limit what styles will be used, choose one or more from the options below (separated with ,) -->
		<!-- color,flat,high-contrast -->
		<FluentEmojiStyles>color,</FluentEmojiStyles>
	</PropertyGroup>

	<ItemGroup Condition="'$(TargetFramework)'=='net6.0'">
		<PackageReference Include="Microsoft.AspNetCore.Components.WebAssembly" Version="6.0.13" />
		<PackageReference Include="Microsoft.AspNetCore.Components.WebAssembly.DevServer" Version="6.0.13" PrivateAssets="all" />
	</ItemGroup>

	<ItemGroup Condition="'$(TargetFramework)'=='net7.0'">
		<PackageReference Include="Microsoft.AspNetCore.Components.WebAssembly" Version="7.0.2" />
		<PackageReference Include="Microsoft.AspNetCore.Components.WebAssembly.DevServer" Version="7.0.2" PrivateAssets="all" />
	</ItemGroup>

	<ItemGroup>
		<ProjectReference Include="..\FluentUI.Demo.Shared\FluentUI.Demo.Shared.csproj" />
	</ItemGroup>

	<ItemGroup Condition="'$(Configuration)'=='Release'">
		<PackageReference Include="Microsoft.Fast.Components.FluentUI" Version="2.*-*" PrivateAssets="none" />
	</ItemGroup>

	<ItemGroup Condition="'$(Configuration)'=='Debug'">
		<CompilerVisibleProperty Include="PublishFluentIconAssets" />
		<CompilerVisibleProperty Include="PublishFluentEmojiAssets" />
		<CompilerVisibleProperty Include="FluentEmojiStyles" />
		<CompilerVisibleProperty Include="FluentEmojiGroups" />
		<CompilerVisibleProperty Include="FluentIconSizes" />
		<CompilerVisibleProperty Include="FluentIconVariants" />
		<ProjectReference Include="..\..\src\Microsoft.Fast.Components.FluentUI.Configuration\Microsoft.Fast.Components.FluentUI.Configuration.csproj" OutputItemType="Analyzer" ReferenceOutputAssembly="false" />
		<ProjectReference Include="..\..\src\Microsoft.Fast.Components.FluentUI\Microsoft.Fast.Components.FluentUI.csproj" />
	</ItemGroup>

	<ItemGroup>
		<TrimmerRootAssembly Include="Microsoft.Fast.Components.FluentUI" />
		<TrimmerRootAssembly Include="FluentUI.Demo.Shared" />
	</ItemGroup>

</Project>

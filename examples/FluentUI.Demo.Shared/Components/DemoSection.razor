@if (!string.IsNullOrEmpty(Title))
{
    @if (IsNew)
    {
        <h4>@Title <NewBadge /></h4>
    }
    else
    {
        <h4>@Title</h4>
    }
}

@if (Description != null)
{
    <div class="demo-section-description">
        @Description
    </div>
}

@if (ChildContent != null)
{
    <div class="demo-section-Example">
        @ChildContent
    </div>
}

@if (HasCode)
{
    <h4>Code</h4>
    <CodeSnippet>@CodeContents</CodeSnippet>
}


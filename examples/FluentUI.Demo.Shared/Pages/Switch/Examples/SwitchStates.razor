<h4>Checked</h4>
<FluentSwitch  @bind-Value=value1 Checked="true"></FluentSwitch>

<h4>Required</h4>
<FluentSwitch  @bind-Value=value2 Required="true"></FluentSwitch>

<h4>Disabled</h4>
<div style="display: flex; flex-direction: column;">
    <FluentSwitch  @bind-Value=value3 Disabled="true"></FluentSwitch>
    <FluentSwitch  @bind-Value=value4 Disabled="true">label</FluentSwitch>
    <FluentSwitch  @bind-Value=value5 Disabled="true" Checked="true">checked</FluentSwitch>
    <FluentSwitch  @bind-Value=value6 Disabled="true" Checked="true">
        checked
        <span slot="checked-message">On</span>
        <span slot="unchecked-message">Off</span>
    </FluentSwitch>
</div>
@code {
    bool value1, value2, value3, value4, value5, value6;
}
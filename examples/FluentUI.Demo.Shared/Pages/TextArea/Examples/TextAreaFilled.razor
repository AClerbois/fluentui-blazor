<h4>Default</h4>
<FluentTextArea @bind-Value=value1 Appearance="Appearance.Filled"></FluentTextArea>
<FluentTextArea @bind-Value=value2 Appearance="Appearance.Filled">
    <span>label</span>
</FluentTextArea>

<h4>Placeholder</h4>
<FluentTextArea @bind-Value=value3 Appearance="Appearance.Filled" Placeholder="Placeholder"></FluentTextArea>

<!-- Required -->
<h4>Required</h4>
<FluentTextArea @bind-Value=value4 Appearance="Appearance.Filled" Required="true"></FluentTextArea>

<!-- Disabled -->
<h4>Disabled</h4>
<FluentTextArea @bind-Value=value5 Appearance="Appearance.Filled" Disabled="true"></FluentTextArea>
<FluentTextArea @bind-Value=value6 Appearance="Appearance.Filled" Disabled="true">
    <span>label</span>
</FluentTextArea>
<FluentTextArea @bind-Value=value7 Appearance="Appearance.Filled" Disabled="true" Placeholder="placeholder"></FluentTextArea>

<!-- Read only -->
<h4>Read only</h4>
<FluentTextArea @bind-Value=value8 Appearance="Appearance.Filled" Readonly="true">
    label
</FluentTextArea>
<FluentTextArea @bind-Value=value9 Appearance="Appearance.Filled" Readonly="true">
    label
</FluentTextArea>
@code {
    string? value1, value2, value3, value4, value5, value6, value7, value8="Read only text area", value9 = "Read only text area";
}
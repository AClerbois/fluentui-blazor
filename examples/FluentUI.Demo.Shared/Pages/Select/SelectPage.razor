@page "/SelectPage"
<h1>Select</h1>
<ApiDocumentation Component="typeof(FluentSelect<string>)" GenericLabel="TValue" />

<h2>Default</h2>
<FluentSelect @bind-Value="@selectValue">
    <FluentOption>This option has no value</FluentOption>
    <FluentOption Disabled="true">This option is disabled</FluentOption>
    <FluentOption Value="@("hi")">This option has a value</FluentOption>
    <FluentOption Selected="true">This option is selected by default</FluentOption>
</FluentSelect>

<h2>Default with an int type</h2>
<FluentSelect @bind-Value="@selectValue2">
    <FluentOption Value=1>1</FluentOption>
    <FluentOption Value=-1 Disabled="true">-1</FluentOption>
    <FluentOption Value=2>2</FluentOption>
    <FluentOption Value=3 Selected="true">3</FluentOption>
</FluentSelect>

<h2>From list of string items</h2>
<FluentSelect Options=@stringOptions />

<h2>From list of int items</h2>
<FluentSelect Options=@intOptions />


<h2>Filled</h2>
<FluentSelect Appearance="Appearance.Filled" @bind-Value="@selectValue">
    <FluentOption>This option has no value</FluentOption>
    <FluentOption Disabled="true">This option is disabled</FluentOption>
    <FluentOption Value="@("hi")">This option has a value</FluentOption>
    <FluentOption Selected="true">This option is selected by default</FluentOption>
</FluentSelect>

<h2>With Label</h2>
<label for="shirt-size">Choose a T-Shirt size:</label>
<FluentSelect Id="shirt-size" @bind-Value="@selectValue">
    <FluentOption Value="@("s")">Small</FluentOption>
    <FluentOption Value="@("m")">Medium</FluentOption>
    <FluentOption Value="@("l")">Large</FluentOption>
    <FluentOption Value="@("xl")">Extra Large</FluentOption>
</FluentSelect>

<h2>Disabled</h2>
<FluentSelect Disabled="true" @bind-Value="@selectValue">
    <FluentOption>This option is not selectable</FluentOption>
</FluentSelect>

<FluentSelect @bind-Value="@selectValue">
    <FluentOption Disabled="true">This option is disabled</FluentOption>
    <FluentOption>This option is not disabled</FluentOption>
    <FluentOption>This option is not disabled</FluentOption>
</FluentSelect>

<h2>Selected Option</h2>
<FluentSelect @bind-Value="@selectValue">
    <FluentOption>Option One</FluentOption>
    <FluentOption Selected="true">Option Two</FluentOption>
    <FluentOption>Option Three</FluentOption>
    <FluentOption>Option Four</FluentOption>
</FluentSelect>

<h2>Custom Indicator</h2>
<FluentSelect @bind-Value="@selectValue">
    <FluentIcon Name="@FluentIcons.Globe" Slot="indicator" Size="@IconSize.Size16" Filled=false UseAccentColor=false />  

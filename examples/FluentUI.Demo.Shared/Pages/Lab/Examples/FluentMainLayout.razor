@namespace FluentUI.Demo.Shared
@inherits FluentComponentBase

<FluentLayout Class="@ClassValue" Style="@StyleValue">
    <FluentHeader Height="@HeaderHeight">
        @Header
    </FluentHeader> 
    
    @SubHeader
    
    <FluentStackPanel Orientation="Orientation.Horizontal" Width="100%" Class="fluent-main-layout-stack-panel" Gap="0">
        < FluentNavMenu Width="200px" IsCollapsible="true" Class="fluent-main-layout-navmenu" Title="@NavMenuTitle">
            @NavMenuItems
        < /FluentNavMenu>
        
        <FluentBodyContent>
            @Body
        </FluentBodyContent>
    </FluentStackPanel>
</FluentLayout>
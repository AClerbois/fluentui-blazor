@namespace FluentUI.Demo.Shared
@inherits FluentComponentBase
<FluentTreeItem Class="@ClassValue"
                Style="@StyleValue"
                Disabled="@Disabled"
                Expanded="@(NavMenuExpanded ? Expanded : false)"
                tabindex="-1">
    @if (!string.IsNullOrEmpty(Text) && NavMenuExpanded)
    {
        <span class="fluent-navmenu-group-text" style="@(NavMenuExpanded ? null : "display: none;")">@Text</span>
    }
    @if (NavMenuExpanded)
    {
        @ChildContent
    }
</FluentTreeItem>
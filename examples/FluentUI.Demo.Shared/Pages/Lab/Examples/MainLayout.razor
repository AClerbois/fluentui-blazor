@* Remember to replace the namespace below with your own project's namespace. *@
@namespace FluentUI.Demo.Shared

@inherits FluentComponentBase

<Layout Class="@ClassValue" Style="@StyleValue">
    <Header Height="@HeaderHeight">
        @Header
    </Header> 
    
    @SubHeader
    
    <StackPanel Orientation="Orientation.Horizontal" Width="100%" Class="main-layout-stack-panel" Gap="0">
        <NavMenu Width="200px" Collapsible="true" Class="main-layout-navmenu" Title="@NavMenuTitle">
            @NavMenuItems
        </NavMenu>
        
        <BodyContent>
            @Body
        </BodyContent>
    </StackPanel>
</Layout>
@* Remember to replace the namespace below with your own project's namespace. *@
@namespace FluentUI.Demo.Shared

@inherits FluentComponentBase
<div>
    <CascadingValue Value="this" Name="NavMenu">
        <CascadingValue Value="Expanded" Name="NavMenuExpanded">
            <FluentTreeView Class="@ClassValue"
                            Style="@StyleValue"
                            @bind-CurrentSelected=currentSelected
                            id="@Id"
                            OnSelectedChange="HandleSelectedChange">
                @if (Collapsible) {
                    <FluentButton Appearance="Appearance.Lightweight"
                              Class="navmenu-main-button"
                              @onclick="CollapsibleClickAsync"
                              title="@Title">
                        <FluentIcon Name="@(FluentIcons.Navigation)" Size="IconSize.Size20" />
                    </FluentButton>
                }
                @ChildContent
            </FluentTreeView>
        </CascadingValue>
    </CascadingValue>
</div>
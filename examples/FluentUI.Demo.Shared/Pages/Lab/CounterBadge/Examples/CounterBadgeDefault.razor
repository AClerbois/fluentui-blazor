@* Remember to replace the namespace below with your own project's namespace. *@
@namespace FluentUI.Demo.Shared

<CounterBadge Count="100" Appearance="Appearance.Lightweight">
    <FluentButton Appearance="Appearance.Neutral" >
        <FluentIcon Name="@FluentIcons.Alert" Size="IconSize.Size24" Filled=false Color="Color.Neutral" />
    </FluentButton>
</CounterBadge>

<Spacer Width="25" />

<CounterBadge Count="5" Appearance="Appearance.Neutral">
    <FluentButton Appearance="Appearance.Accent">
        <FluentIcon Name="@FluentIcons.Alert" Size="IconSize.Size24" Filled=false Color="Color.Fill" />
    </FluentButton>
</CounterBadge>

<Spacer Width="25" />

<CounterBadge Count="9" BackgroundColor="@Color.Error.ToAttributeValue()">
    <FluentButton Appearance="Appearance.Filled">
        <FluentIcon Name="@FluentIcons.Mail" Size="IconSize.Size24" Filled=false Color="Color.FillInverse" />
    </FluentButton>
</CounterBadge>

<Spacer Width="25" />

<CounterBadge Count="0" Appearance="Appearance.Accent" ShowZero=true> 
    <FluentButton Appearance="Appearance.Neutral">
        <FluentIcon Name="@FluentIcons.Alert" Size="IconSize.Size24" Filled=false Color="Color.Neutral" />
    </FluentButton>
</CounterBadge>
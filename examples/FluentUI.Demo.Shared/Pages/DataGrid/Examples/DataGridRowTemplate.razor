
<FluentDataGrid id="defaultGrid3" RowsData=RowsGrid ColumnDefinitions=ColumnsGrid GridTemplateColumns="1fr 1fr" TItem=SampleGridData OnRowFocus="HandleRowFocus">
    <RowItemTemplate>
        <FluentDataGridRow>
            <FluentDataGridCell GridColumn=1 >
                <FluentTextField @bind-Value=@context.Name></FluentTextField>
            </FluentDataGridCell>
            <FluentDataGridCell GridColumn=2>
                <FluentNumberField @bind-Value=@context.Age></FluentNumberField>
            </FluentDataGridCell>
        </FluentDataGridRow>

    </RowItemTemplate>
</FluentDataGrid>

@code {
    public class SampleGridData
    {
        public string Name { get; set; }
        public int Age { get; set; }

        public SampleGridData(string name, int age)
        {
            Name = name;
            Age = age;
        }
    }
    
    public List<ColumnDefinition<SampleGridData>> ColumnsGrid = new();
    

    List<SampleGridData> RowsGrid = new()
    {
        new SampleGridData("Rob", 19 ),
        new SampleGridData("Bob", 20 )
    };

    private void HandleRowFocus(FluentDataGridRow<SampleGridData> row)
    {
        Console.WriteLine($"Row focused: {row.RowIndex}");
    }
}

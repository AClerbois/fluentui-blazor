@page "/BadgePage"
<style>
    fluent-badge {
        --badge-fill-highlight: #ffd800;
        --badge-fill-lowlight: #333;
        --badge-color-highlight: #000;
        --badge-color-lowlight: #fff;
    }
</style>
<h1>Badge</h1>
<h4>Default</h4>
<FluentBadge>
    Badge
</FluentBadge>

<h4>Circular</h4>
<FluentBadge Circular=true Appearance="Appearance.Accent">
    Badge
</FluentBadge>

<h4>Lightweight</h4>
<FluentBadge Appearance="Appearance.Lightweight">
    Badge
</FluentBadge>

<h4>Accent</h4>
<FluentBadge Appearance="Appearance.Accent">
    Badge
</FluentBadge>

<h4>Neutral</h4>
<FluentBadge Appearance="Appearance.Neutral">
    Badge
</FluentBadge>

<h4>With map</h4>
<FluentBadge Fill="highlight" Color="highlight">
    Badge
</FluentBadge>
<FluentBadge Fill="lowlight" Color="lowlight">
    Badge
</FluentBadge>
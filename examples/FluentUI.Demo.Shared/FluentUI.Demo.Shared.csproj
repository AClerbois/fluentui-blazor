<Project Sdk="Microsoft.NET.Sdk.Razor">

	<PropertyGroup>
		<TargetFrameworks>net6.0;net7.0</TargetFrameworks>
		<Nullable>enable</Nullable>
		<ImplicitUsings>enable</ImplicitUsings>
		<UseRazorSourceGenerator>false</UseRazorSourceGenerator>
		<LangVersion>latest</LangVersion>
		<EmitCompilerGeneratedFiles>false</EmitCompilerGeneratedFiles>
		<CompilerGeneratedFilesOutputPath>Generated</CompilerGeneratedFilesOutputPath>
	</PropertyGroup>

	<ItemGroup>
		<SupportedPlatform Include="browser" />
	</ItemGroup>

	<ItemGroup Condition=" '$(TargetFramework)' == 'net6.0' ">
		<PackageReference Include="Microsoft.AspNetCore.Components.Web" Version="6.0.9" />
	</ItemGroup>

	<ItemGroup Condition=" '$(TargetFramework)' == 'net7.0' ">
		<PackageReference Include="Microsoft.AspNetCore.Components.Web" Version="7.0.0-rc.1.*" />
	</ItemGroup>

	<ItemGroup>
		<AdditionalFiles Include="$(ProjectDir)\Pages\**\Examples\*" />
		<AdditionalFiles Include="$(ProjectDir)\*.xml" />
	</ItemGroup>

	<ItemGroup>
	  <AdditionalFiles Remove="C:\Source\Blazor\fast-blazor\examples\FluentUI.Demo.Shared\Pages\DataGrid\Examples\DataGridRemoteData.razor" />
	</ItemGroup>

	<ItemGroup>
	  <Content Remove="Pages\DataGrid\Examples\DataGridRemoteData.razor" />
	</ItemGroup>

	<ItemGroup>
		<ProjectReference Include="..\..\src\Microsoft.Fast.Components.FluentUI\Microsoft.Fast.Components.FluentUI.csproj" />
		<ProjectReference Include="..\FluentUI.Demo.Generators\FluentUI.Demo.Generators.csproj" OutputItemType="Analyzer" ReferenceOutputAssembly="false" />
	</ItemGroup>

	<Target Name="CopyExamplesToContentRoot" BeforeTargets="CoreBuild">
		<ItemGroup>
			<Examples Include="$(ProjectDir)\Pages\**\Examples\*" />
		</ItemGroup>
		<Copy SourceFiles="@(Examples)" DestinationFiles="@(Examples->'wwwroot\examples\%(Filename)%(Extension).txt')" SkipUnchangedFiles="true" />
	</Target>
</Project>
